@page "/"
@using BlazorApp.Data

<h1>Marketplace</h1>

@foreach (var seller in sellers)
{
    <div>
        <h2>@seller.Name</h2>
        <p>@seller.Email</p>
        <p>@seller.PhoneNumber</p>
        <p>@seller.Product.Name</p>
        <p>@seller.Product.Price</p>
    </div>
}

@code {
    private List<Seller> sellers;

    protected override async Task OnInitializedAsync()
    {
        sellers = await GetSellers();
    }

    private Task<List<Seller>> GetSellers()
    {
        try
        {
            // Her skal du implementere logikken til at hente sælgere fra din datakilde
            List<Seller> sellers = new List<Seller>(); // Få sælgere fra datakilden

            return Task.FromResult(sellers);
        }
        catch
        {
            // Hvis der opstår en fejl, returner en tom liste
            return Task.FromResult(new List<Seller>());
        }
    }

}







