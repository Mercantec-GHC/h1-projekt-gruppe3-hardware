<!-- AddHardware.razor -->
@page "/addhardware"
@using BlazorApp.Data

<style>
    h3 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: inline-block;
        width: 150px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #45a049;
    }
</style>

<h3>Tilføj et nyt hardwareprodukt</h3>

<EditForm Model="@newHardware" OnValidSubmit="@AddHardwareHandler">
    <div>
        <label>Name:</label>
        <InputText @bind-Value="newHardware.Name" />
    </div>


    <div>
        <label>Condition:</label>
        <InputText @bind-Value="newHardware.Condition" />
    </div>


    <div>
        <label>Description:</label>
        <InputTextArea @bind-Value="newHardware.Description" />
    </div>

    <div>
        <label>Price:</label>
        <InputNumber @bind-Value="newHardware.Price" />
    </div>

    <div>
        <label>Seller Id:</label>
        <InputNumber @bind-Value="newHardware.SellerId" />
    </div>

    <div>
        <label>Seller Name:</label>
        <InputText @bind-Value="newHardware.SellerName" />
    </div>

    <button type="submit">Gem hardware</button>
</EditForm>

@code {
    private Hardware newHardware = new Hardware();
    private DbService dbService;

    protected override void OnInitialized()
    {
        // Configure your database connection string
        string connectionString = "Server=(localdb)\\Local;Database=master;Integrated Security=True;";
        dbService = new DbService(connectionString);
    }

    private async Task AddHardwareHandler()
    {
        try
        {
            newHardware.EnsureNotNullValues(); // Sørg for, at nullable egenskaber har en værdi

            await dbService.AddHardwareAsync(newHardware);

            // Nulstil inputfelterne
            newHardware = new Hardware();

            // Eventuel navigation til en anden side
            // NavigationManager.NavigateTo("/otherpage");
        }
        catch (Exception ex)
        {
            // Udskriv fejldetaljer i konsollen
            Console.WriteLine($"Error adding hardware: {ex.Message}");
            if (ex.InnerException != null)
            {
                Console.WriteLine($"Inner Exception: {ex.InnerException.Message}");
            }
        }
    }
}

